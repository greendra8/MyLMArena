{
    "manifest_version": 3,
    "name": "MyLMArena",
    "version": "0.1.2",
    "description": "Track your LLM preferences on LMArena with a personal ELO rating leaderboard.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://lmarena.ai/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}